<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeerWebshop.Web</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeerWebshop.Web.styles.css" asp-append-version="true" />

    <style>
        /* Set full height for body and html */
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Helvetica Neue', sans-serif;
            background-color: #f4f4f4; /* Light gray background for a clean look */
            color: #333; /* Dark text for high contrast */
        }

        /* Main layout flexbox, container will fill the height */
        .main-container {
            display: flex;
            flex-direction: column;
            min-height: 100%;
        }

        .content {
            flex: 1; /* Makes sure the content area grows to fill space */
        }

        /* Navbar styling */
        header {
            background-color: #1b1b1b; /* Dark background */
            padding: 1rem 0;
        }

        .navbar {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .navbar-brand {
            font-size: 1.8rem;
            color: #f2a900; /* A subtle beer-yellow */
            font-weight: bold;
            text-transform: uppercase;
        }

        .navbar-nav .nav-item .nav-link {
            font-size: 1rem;
            font-weight: 600;
            color: #ddd; /* Soft gray color */
            padding: 0.8rem 1rem;
        }

            .navbar-nav .nav-item .nav-link:hover {
                color: #f2a900; /* Highlight with beer-yellow on hover */
            }

        .navbar-toggler-icon {
            background-color: #f2a900; /* Yellow hamburger icon for mobile */
        }

        /* Notification styling */
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: #28a745; /* Green success background */
            color: #fff;
            padding: 12px 20px;
            border-radius: 5px;
            z-index: 1000;
            display: none;
            opacity: 0;
            transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;
        }

            .notification.error {
                background-color: #dc3545; /* Red error background */
            }

        /* Footer styling */
        footer {
            background-color: #1b1b1b;
            color: #ddd;
            text-align: center;
            padding: 1rem;
            margin-top: auto; /* Ensures footer stays at the bottom */
        }

            footer a {
                color: #f2a900; /* Gold color for links */
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        /* Main content container */
        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
        }

        /* Tables and other components can follow this simple style */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            color: #333;
        }

        tr:hover {
            background-color: #f2a900;
            color: #fff;
        }
    </style>
</head>
<body>

    <div class="main-container">

        <!-- Header / Navbar -->
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">BeerWebshop</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Home")">Hjem</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Beer")">Produkter</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Cart")">Kurv</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- Main content area -->
        <div class="content">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        <!-- Footer -->
        <footer>
            <p>&copy; 2024 - BeerWebshop</p>
        </footer>

    </div>

    <!-- Notification -->
    <div id="notification" class="notification"></div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function showNotification(message, type) {
            var $notification = $('#notification');
            $notification.text(message);
            $notification.removeClass('error success');
            if (type === 'error') {
                $notification.addClass('error');
            } else {
                $notification.addClass('success');
            }
            $notification.css('display', 'block').css('opacity', 1).css('transform', 'translateY(0)');
            setTimeout(function () {
                $notification.css('opacity', 0).css('transform', 'translateY(-10px)');
                setTimeout(function () {
                    $notification.css('display', 'none');
                }, 200);
            }, 1500);
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
